- content_for(:title) { @subject }
- content_for(:header_bottom) do
  :javascript
    $(function(){
      PR.Comments.init('#{comments_path}/');
    });

#article
  %h1
    = @article.subject
    = link_to share_article_path(@article), :id => "share" do
      = image_tag "share.png"
      Share
    .clear

  = md(@article.body)


  = render :partial => "comments"