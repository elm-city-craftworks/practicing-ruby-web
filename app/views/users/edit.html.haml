- content_for(:title)  { "Settings" }
- content_for(:header) { "Settings" }

= form_for @user do |f|
  = render :partial => "form", :locals => { :f => f }
  %p
    = f.submit "Update Settings"
    = link_to "Cancel my account", user_path(@user), :method => :delete,
      :data => {:confirm => "Are you sure you wish to cancel your account?"}, :id => "cancel"